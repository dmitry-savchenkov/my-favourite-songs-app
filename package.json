{
  "name": "my-favourite-songs-app",
  "version": "1.0.0",
  "scripts": {
    "install:deps:api": "cd ./server && yarn install",
    "install:deps:header": "cd ./applications/header && yarn install",
    "install:deps:songs": "cd ./applications/songs-list && yarn install",
    "install:deps:main": "cd ./applications/my-favourite-songs-app && yarn install",
    "install:deps": "run-p install:deps:api install:deps:header install:deps:songs install:deps:main",
    "start:api": "cd ./server && yarn serve",
    "start:header": "cd ./applications/header && yarn start",
    "start:songs": "cd ./applications/songs-list && yarn start",
    "start:mfes": "run-p start:header start:songs",
    "start:dependencies": "run-p start:api start:mfes",
    "start:main": "cd ./applications/my-favourite-songs-app && yarn start",
    "start:app": "run-p start:dependencies start:main"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dmitry-savchenkov/my-favourite-songs-app.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dmitry-savchenkov/my-favourite-songs-app/issues"
  },
  "homepage": "https://github.com/dmitry-savchenkov/my-favourite-songs-app#readme",
  "dependencies": {
    "concurrently": "^8.2.1"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
